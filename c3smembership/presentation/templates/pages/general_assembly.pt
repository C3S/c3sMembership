<html xmlns="http://www.w3.org/1999/xhtml"
        xml:lang="en"
        xmlns:tal="http://xml.zope.org/namespaces/tal"
        xmlns:metal="http://xml.zope.org/namespaces/metal"
        metal:use-macro="backend"
        i18n:domain="c3smembership">
    <?python
        from datetime import date
    ?>
    <tal:block metal:fill-slot="content">
        <h1>General assembly</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Number</td>
                    <td>${number}</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>${name}</td>
                </tr>
                <tr>
                    <td>Date</td>
                    <td>${date.strftime('%d.%m.%Y')}</td>
                </tr>
            </tbody>
        </table>

        <h1>Invitations</h1>
        <p tal:condition="date >= date.today()">
            <a href="${request.route_url('general_assembly_batch_invite', count=5, number=number)}"
                    title="Note: change number in URL as appropriate! Default is 5."
                    class="btn btn-success">
                Send 5 invitations
            </a>
            <br />
            You may send more than 5 invitations at once by using another number:
            <form method="POST" action="${request.route_url('general_assembly_batch_invite', count=0, number=number)}">
                <input type="text" name="count" value="5" placeholder="5"></input>
                <input type="hidden" name="number" value="${number}"></input>
                <input type="submit" name="submit"></input>
            </form>
        </p>
        <p tal:condition="not date >= date.today()">
            Invitations cannot be sent as the general assembly took place in the past.
        </p>
    </tal:block>
</html>
